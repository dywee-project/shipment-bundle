{%  extends "DyweeShipmentBundle::admin.html.twig" %}

{% block metaTitle %}
    Liste des règles de livraison {{ parent() }}
{% endblock %}

{% block body %}

    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools">
                    <a href="{{ path('shipment_rule_add') }}" class="btn btn-box-tool btn-success"><i class="fa fa-plus"></i> Ajouter une règle</a>
                </div>
                <h2 class="box-title">Liste des règles d'envois</h2>
            </div>
            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {%  for shipmentRule in shipmentRules %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ shipmentRule.name }}</td>
                        <td>
                            <div class="btn-group btn-group-xs">
                                <a href="{{ path('shipment_rule_update', {id: shipmentRule.id}) }}" class="btn btn-default"><i class="fa fa-pencil"></i> </a>
                            </div>
                            <a href="{{ path('shipment_rule_delete', {id: shipmentRule.id}) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash-o"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}