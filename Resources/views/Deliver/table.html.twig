{# Dywee\ShipmentBundle\Resources\View\Deliver\table.html.twig #}

{%  extends "DyweeShipmentBundle::admin.html.twig" %}

{% block metaTitle %}
    Liste des livreurs {{ parent() }}
{% endblock %}

{% block title %}
    Liste des Livreurs
{% endblock %}


{% block body %}

    {#<a href="{{ path('deliver_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter</a>#}


    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for deliver in delivers %}
            <tr>
                <td><small>{{ deliver.id }}</small></td>
                <td><small>{{ deliver.name }}</small></td>
                <td><small>{% if deliver.state == 0 %}
                            <span class="label label-default">Inactif</span>
                        {% elseif deliver.state == 1 %}
                            <span class="label label-success">Actif</span>
                        {%  endif %}
                    </small>
                </td>
                <td><small> <a href="#{{ path('deliver_view', {id: deliver.id}) }}" class="link-unstyled"><i class="fa fa-eye"></i> </a>
                        <a href="#{{ path('deliver_update', {id: deliver.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                        <a href="#{{ path('deliver_delete', {id: deliver.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}