{# Dywee\ShipmentBundle\Resources\View\ShipmentMethod\table.html.twig #}

{%  extends "DyweeShipmentBundle::admin.html.twig" %}

{% block metaTitle %}
    Liste des règles de livraison {{ parent() }}
{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success"> {{ flashMessage }} </div>
    {% endfor %}

    <a href="{{ path('dywee_shipmentMethod_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter</a>

    <div class="title-heading">
        <h1 class="text-center">Liste des règles de livraison</h1>
    </div>
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Pays</th>
            <th>Livreur</th>
            <th>Type</th>
            <th>Poids</th>
            <th>Prix</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for shipmentMethod in shipmentMethodList %}
            <tr>
                <td><small>{{ shipmentMethod.id }}</small></td>
                <td><small>{{ shipmentMethod.country.name }}</small></td>
                <td><small>{{ shipmentMethod.deliver.name }}</small></td>
                <td><small>{{ shipmentMethod.type }}</small></td>
                <td><small>{{ shipmentMethod.minWeight }} gr -> {{ shipmentMethod.maxWeight }} gr</small></td>
                <td><small>{{ shipmentMethod.price|number_format(2) }}€</small></td>
                <td><small>{% if shipmentMethod.active == false %}
                            <span class="label label-default">Inactif</span>
                        {% elseif shipmentMethod.active == true %}
                            <span class="label label-success">Actif</span>
                        {%  endif %}
                    </small>
                </td>
                <td><small> <a href="#{{ path('dywee_shipmentMethod_view', {id: shipmentMethod.id}) }}" class="link-unstyled"><i class="fa fa-eye"></i> </a>
                        <a href="#{{ path('dywee_shipmentMethod_update', {id: shipmentMethod.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                        <a href="#{{ path('dywee_shipmentMethod_delete', {id: shipmentMethod.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}